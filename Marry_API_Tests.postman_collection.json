{
	"info": {
		"_postman_id": "marry-api-tests",
		"name": "Marry API Tests",
		"description": "相亲社交APP API测试集合",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "认证相关",
			"item": [
				{
					"name": "用户注册",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\",\n  \"phoneNumber\": \"13800138000\",\n  \"nickname\": \"测试用户\",\n  \"gender\": \"MALE\",\n  \"age\": 25,\n  \"height\": 175,\n  \"weight\": 65,\n  \"educationLevel\": \"本科\",\n  \"occupation\": \"软件工程师\",\n  \"incomeLevel\": \"10-20万\",\n  \"city\": \"北京\",\n  \"province\": \"北京\",\n  \"maritalStatus\": \"SINGLE\",\n  \"hasChildren\": false,\n  \"selfIntroduction\": \"我是一个热爱生活的人\",\n  \"hobbies\": \"读书,旅行,运动\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"register"
							]
						}
					}
				},
				{
					"name": "用户登录",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"usernameOrEmail\": \"testuser\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						}
					}
				},
				{
					"name": "检查用户名是否存在",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/auth/check-username?username=testuser",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"check-username"
							],
							"query": [
								{
									"key": "username",
									"value": "testuser"
								}
							]
						}
					}
				},
				{
					"name": "检查邮箱是否存在",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/auth/check-email?email=test@example.com",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"check-email"
							],
							"query": [
								{
									"key": "email",
									"value": "test@example.com"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "用户相关",
			"item": [
				{
					"name": "获取所有用户",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"users"
							]
						}
					}
				},
				{
					"name": "根据ID获取用户",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"users",
								"1"
							]
						}
					}
				},
				{
					"name": "获取当前用户信息",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/profile",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"users",
								"profile"
							]
						}
					}
				},
				{
					"name": "更新用户信息",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nickname\": \"新昵称\",\n  \"selfIntroduction\": \"更新后的自我介绍\",\n  \"hobbies\": \"新爱好1,新爱好2\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/users/profile",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"users",
								"profile"
							]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080"
		},
		{
			"key": "token",
			"value": "your_jwt_token_here"
		}
	]
} 